<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bookshop.mappers.main">

<!-- [1] 회원가입 관련 -->

<!-- 회원가입 SQL -->
<insert id ="join">
	INSERT INTO USERS
	VALUES (#{user_id}, #{user_pw}, #{user_name}, #{user_birth}, #{user_nickname}, #{user_email}, #{user_phone}, #{user_addr}, 0, 0, #{user_init_genre});
</insert>

<!-- 아이디 중복체크 SQL -->
<select id = "checkId" resultType="string">
	SELECT user_id
	FROM USERS
	WHERE user_id = #{user_id}	
</select>

<!-- 이메일 중복체크 SQL -->
<select id = "checkEmail" resultType="string">
	SELECt user_email
	FROM USERS
	WHERE user_email = #{user_email}
</select>

<!-- [2] 로그인 관련 -->

<!-- 로그인 SQL -->
<select id="login" resultType="Users">
		SELECT 	* 
		FROM	USERS
		WHERE	user_id = #{user_id}
		AND		user_pw = #{user_pw}
</select>

<!-- 아이디 찾기 SQL (email이용)-->
<!-- 객체를 반환 받음 : resutType = Users -->
<select id="getIdE" resultType="Users">
	SELECT *
	FROM USERS
	WHERE user_email = #{user_email}
	AND	  user_name = #{user_name}
</select>

<!-- 아이디 찾기 SQL (phone이용)-->
<!-- 객체를 반환 받음 : resutType = Users -->
<select id="getIdP" resultType="Users">
	SELECT *
	FROM USERS
	WHERE user_email = #{user_email}
	AND	  user_name = #{user_name}
</select>

<!-- 비밀번호 변경 관련 -->
<!-- 가입된 회원정보 불러오기 (비밀번호변경) -->
<select id="getUserInfo" resultType="Users">
	SELECT *
	FROM USERS
	WHERE user_id = #{user_id}
</select>
<!-- 비밀번호 변경 SQL -->
<update id="updatePw" >
	UPDATE USERS
	SET 	user_pw = #{user_pw}
	WHERE 	user_id = #{user_id}
</update>




</mapper>