<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bookshop.mappers.main">

<!-- 회원가입 SQL -->
<insert id ="join">
	ISNERT INTO USERS
	VLAUES(#{user_id}, #{user_pw}, #{user_name}, #{user_birth}, #{user_nickname}, #{user_email}, #{user_phone}, #{user_addr}, #{user_point}, #{user_admin}, #{user_init_genre})
</insert>

<!-- 아이디 중복체크 SQL -->
<select id = "checkId" resultType="string">
	SELECT user_id
	FROM USERS
	WHERE user_id = #{user_id}	
</select>

<!-- 이메일 중복체크 SQL -->
<select id = "checkEmail" resultType="string">
	SELECt user_email
	FROM USERS
	WHERE user_email = #{user_email}
</select>

<!-- 로그인 SQL -->
<select id="login" resultType="Users">
	SELECT *
	FROM USERS
	WHERE user_id = #(user_id)
	AND 	user_pw = #(user_pw)
</select>


</mapper>